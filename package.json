{
  "name": "burger-fest",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "server"
  ],
  "scripts": {
    "prepare": "husky",
    "dev:mobile": "npm run dev --workspace=@burger-fest/mobile",
    "dev:admin": "npm run dev --workspace=@burger-fest/admin",
    "dev:server": "npm run dev --workspace=@burger-fest/server",
    "build:mobile": "npm run build --workspace=@burger-fest/mobile",
    "build:admin": "npm run build --workspace=@burger-fest/admin",
    "build:server": "npm run build --workspace=@burger-fest/server",
    "build": "npm run build:server && npm run build:admin && npm run build:mobile",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "type-check": "npm run type-check --workspaces --if-present"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bhuve1996/burger-fest.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
